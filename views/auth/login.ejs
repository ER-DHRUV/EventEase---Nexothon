<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>

    <link rel="stylesheet" href="/css/auth/login.css">
</head>

<body>
    <div class="container">
        <h1 class="form-title">Welcome Back</h1>

        <div class="user-type-buttons">
            <button type="button" class="btn public active" id="public-btn">Public</button>
            <button type="button" class="btn organizer" id="organizer-btn">Organizer</button>
        </div>
        <input type="hidden" name="userType" id="userType" value="public" />


        <form action="/login" method="POST">
            <input type="hidden" id="role" name="role" value="public" />
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" required />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required />
            </div>
          
            <input type="submit" id="submit" value="Sign In" />
        </form>
        <div class="auth-link">
            Don't have an account? <a href="/signup">Create one here</a>
        </div>
    </div>
    <% if (typeof error1 !=='undefined' ) { %>
        <p style="color: red">
            <%= error1 %>
        </p>
        <% } else if (typeof error2 !=='undefined' ) { %>
            <p style="color: red">
                <%= error2 %>
            </p>
            <% } %>

               <script src="/js/auth/login.js"></script>
               
</body>

</html>